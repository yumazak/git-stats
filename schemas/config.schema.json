{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/yumazak/kodo/schemas/config.schema.json",
  "title": "kodo Configuration",
  "description": "Configuration file for kodo CLI tool",
  "type": "object",
  "required": ["repositories"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference for IDE support"
    },
    "repositories": {
      "type": "array",
      "description": "List of Git repositories to analyze",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/repository"
      }
    },
    "defaults": {
      "$ref": "#/$defs/defaults"
    }
  },
  "$defs": {
    "repository": {
      "type": "object",
      "description": "Repository configuration",
      "required": ["name", "path"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Display name for the repository",
          "minLength": 1
        },
        "path": {
          "type": "string",
          "description": "Path to the repository (supports ~ for home directory)",
          "minLength": 1
        },
        "branch": {
          "type": "string",
          "description": "Default branch to analyze (e.g., main, master, develop)"
        }
      },
      "additionalProperties": false
    },
    "defaults": {
      "type": "object",
      "description": "Default settings for analysis",
      "properties": {
        "days": {
          "type": "integer",
          "description": "Number of days to analyze",
          "minimum": 1,
          "maximum": 365,
          "default": 7
        },
        "exclude_merges": {
          "type": "boolean",
          "description": "Whether to exclude merge commits from analysis",
          "default": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
